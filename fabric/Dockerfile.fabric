FROM golang:1.21

# Set up environment variables
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Set the working directory in the container
WORKDIR /app

# Install Python, pip, git, curl, and other dependencies
RUN apt-get update && apt-get install -y python3 python3-pip git curl && rm -rf /var/lib/apt/lists/* \
    # Install Ollama
    && curl -sSfL https://ollama.com/install.sh | sh

# Create a non-root user and set permissions
RUN useradd -ms /bin/bash fab_user && chown -R fab_user /app

# Switch to the non-root user
USER fab_user

# Install Fabric directly from the repository
RUN go install github.com/danielmiessler/fabric@latest

# Expose any necessary ports for Fabric (adjust if needed)
EXPOSE 8000

# Default to bash for now
CMD ["/bin/bash"]
